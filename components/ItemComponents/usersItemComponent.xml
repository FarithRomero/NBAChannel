<?xml version="1.0" encoding="utf-8" ?>

<component name="UsersItemComponent" extends="Group">

    <interface>
        <field id="width" type="float"/>
        <field id="height" type="float" OnChange="onHeightChanged" />
        <field id="itemContent" type="node" OnChange="onitemContentChanged"/>
    </interface>

    <script type="text/brightscript" uri="usersItemComponent.brs" />

    <children>
    <LayoutGroup
        id="userComponentsAlignment"
        layoutDirection="vert"
        horizAlignment="left"
        vertAlignment="top"
        visible= "true" >
        <Poster
            id="userProfile">
            <label
                id="userName"
                color="0xE7F6F2"
                translation= "[110,270]"/>
            <Poster
                id="dataUserProfile"
                uri="pkg:/images/chooseProfile.png"
                width="230"
                height="130"
                loadWidth="230"
                loadHeight="130"
                loadDisplayMode="scaleToFit"
                loadingBitmapUri="pkg:/images/ballon.png"
                failedBitmapUri="pkg:/images/ballon.png"
                translation="[140, 370]"
                opacity="0.3" />
        </Poster>
    </LayoutGroup>
    </children>
</component>